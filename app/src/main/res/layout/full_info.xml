<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/title_bg"
            android:gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/title"
            android:layout_margin="20dp"
            android:background="@drawable/border"
            android:orientation="horizontal" >

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/itemImage"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="8dp"
                android:padding="10dp" />
        </LinearLayout>

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/itemImage3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/itemImage2"
            android:background="@drawable/border"
            android:padding="10dp"
            android:src="@drawable/image_not" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/itemImage1"
            android:gravity="center_vertical"
            android:text="Description:"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/description"
            android:background="@drawable/border"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </LinearLayout>

        <Button
            android:id="@+id/button1"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/linearLayout2"
            android:layout_marginTop="46dp"
            android:background="#007d75"
            android:text="Buy Now" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/button1"
            android:background="#d1d1d1"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/oth" />

            <ImageButton
                android:id="@+id/imageView1"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.14"
                android:src="@drawable/oth1" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout3"
            android:layout_alignLeft="@+id/itemImage2"
            android:text="       =" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/itemImage1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/linearLayout1"
            android:background="@drawable/border"
            android:padding="10dp"
            android:src="@drawable/image_not" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/itemImage2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_above="@+id/description"
            android:layout_centerHorizontal="true"
            android:background="@drawable/border"
            android:padding="10dp"
       />

    </RelativeLayout>

</ScrollView>